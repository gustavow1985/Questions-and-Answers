<%- include ("partials/header.ejs") %>
<%- include ("partials/navbar.ejs") %>
<body>
    <div class="container">
       <hr>
       <h1>
           <%= Pergunta.titulo %>           
       </h1>
       <p>
            <%= Pergunta.descricao %>
       </p>
       <hr>
       <form method="POST" action="/responder">
           <h3>Responda</h3>
           <textarea placeholder="Digite sua resposta..." name="corpo" class="form-control mt-3"></textarea>
           <input type="hidden" name="pergunta" value="<%= Pergunta.id %>">
           <button class="btn btn-primary mt-3">Responder</button>
       </form>
       <hr>
       <h3>Respostas</h3>
       <hr>
       <% respostas.forEach (resposta =>{%>
            <div class="card mt-2">
                <div class="card-body">
                    <%= resposta.corpo %>
                </div>
            </div>
       <% }) %>
   </div>
</body>
<%- include ("partials/footer.ejs") %>